<h2 class="move_type description-label ">{{localize "sofh.item.question"}}</h2>
    <button id="add-question-btn" style="margin-left: 10px; padding: 5px 10px;">{{localize "sofh.ui.moves.questionaddbutton"}}</button>
 
      {{#each system.question as |question index|}}
          <div class="question-sheet">
            <textarea class="question" name="system.question.{{@index}}.description">{{question.description}}</textarea>
            <select id="question-type" name="system.question.{{@index}}.impact">
              <option value="true" {{#if (eq question.impact "true")}}selected{{/if}}>{{localize 'sofh.ui.rolldialog.positiveOption'}}</option>
              <option value="false" {{#if (eq question.impact "false")}}selected{{/if}}>{{localize 'sofh.ui.rolldialog.negativeOption'}}</option>
            </select>
            <button class="remove-question-btn" id="{{@index}}" style="margin-left: 5px;">üóëÔ∏è</button>
          </div>
      {{/each}}